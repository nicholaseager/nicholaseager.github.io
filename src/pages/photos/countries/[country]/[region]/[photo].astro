---
import { getCollection } from "astro:content";
import OrderPrint from "../../../../../layouts/OrderPrint.astro";
import { getPhotoLocationParts } from "../../../../../utils/photo-paths";

export async function getStaticPaths() {
  const photos = await getCollection("photos");

  return photos.map((photo) => {
    const [country, region, photoSlug] = photo.data.slug
      .replace(/^photos\/countries\//, "")
      .split("/");
    return {
      params: { country, region, photo: photoSlug },
      props: { photo },
    };
  });
}

const { photo } = Astro.props;
---

<OrderPrint {...photo.data} />
