---
import MediaContainer from "../../components/containers/MediaContainer.astro";
import PageContainer from "../../components/containers/PageContainer.astro";
import Layout from "../../layouts/Layout.astro";
import PhotoGrid from "../../components/photos/PhotoGrid";
import Text from "../../components/ui/Text";

import { getCollection } from "astro:content";
import TextContainer from "../../components/containers/TextContainer.astro";

const photos = await getCollection("photos");
const showcasePhotoPaths = photos
  .filter((photo) => photo.data.tags.includes("showcase"))
  .map((photo) => photo.data.path);
---

<Layout>
  <PageContainer>
    <TextContainer>
      <Text variant="h1">Photos</Text>
      <Text variant="body"
        >Sometimes a single photo is all you need to tell a story. Browse my
        most unique stories.</Text
      >
    </TextContainer>
    <MediaContainer>
      <PhotoGrid client:visible photos={showcasePhotoPaths} />
    </MediaContainer>
  </PageContainer>
</Layout>
