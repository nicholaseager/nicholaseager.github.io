---
import Banner from "../components/Banner.astro";
import NavBar from "../components/NavBar.tsx";
import Welcome from "../components/Welcome.astro";
import Layout from "../layouts/Layout.astro";

const CDN_BASE_URL = import.meta.env.CDN_BASE_URL;
---

<Layout>
  <NavBar client:load pathname={Astro.url.pathname} style="transparent" />
  <Banner
    title="Adventure Film and Photos"
    subtitle="by Nicholas Eager"
    type="video"
    media={`${CDN_BASE_URL}/home-intro.mp4`}
  />
  <Welcome />
</Layout>
