---
import NavBar from "../components/NavBar";
import Footer from "../components/Footer.astro";
import KofiWidget from "../components/KoFiWidget.astro";

interface Props {
  navStyle?: "opaque" | "transparent";
}

const { navStyle = "opaque" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Nicholas Eager</title>
  </head>
  <body>
    <NavBar client:load pathname={Astro.url.pathname} style={navStyle} />
    <slot />
  </body>
  <KofiWidget />
  <Footer />
  <!-- Spacing for kofi widget -->
  <div class="h-16"></div>
</html>
