---
import NavBar from "../components/NavBar";
import Footer from "../components/Footer.astro";
import KofiWidget from "../components/KoFiWidget.astro";
import Head from "../seo/Head.astro";
import BaseSEO from "../seo/BaseSEO.astro";

interface Props {
  title: string;
  description: string;
  image?: string;
  navStyle?: "opaque" | "transparent";
}

const {
  title,
  description,
  image = "profile-square_7r8XDOfQj",
  navStyle = "opaque",
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <!-- SEO -->
    <Head title={title} description={description} image={image} />
    <!-- End SEO -->
  </head>
  <body>
    <NavBar client:load pathname={Astro.url.pathname} style={navStyle} />
    <slot />
    <BaseSEO title={title} description={description} image={image} />
  </body><KofiWidget />
  <Footer />
  <!-- Spacing for kofi widget -->
  <div class="h-16"></div>
</html>
