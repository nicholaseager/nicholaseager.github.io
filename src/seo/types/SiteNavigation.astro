---
type SiteNavigationRoute = {
  name: string;
  route: string;
};

interface Props {
  siteURL: URL;
  routes: SiteNavigationRoute[];
}

const { siteURL, routes } = Astro.props;

const basePath = siteURL.origin;

const jsonLd = {
  "@context": "https://schema.org",
  "@type": "SiteNavigationElement",
  name: routes.map((i) => i.name),
  url: routes.map((i) => new URL(i.route, basePath)),
};
---

<script
  is:inline
  type="application/ld+json"
  set:html={JSON.stringify(jsonLd)}
/>
