---
interface Props {
  siteName: string;
  siteDescription: string;
  siteURL: URL;
  organizationName: string;
  organizationImageURL: URL;
}

const {
  siteName,
  siteDescription,
  siteURL,
  organizationName,
  organizationImageURL,
} = Astro.props;

const jsonLd = {
  "@id": `${siteURL}#website`,
  "@context": "https://schema.org",
  "@type": "WebSite",
  name: siteName,
  description: siteDescription,
  url: siteURL.toString(),
  publisher: {
    "@type": "Organization",
    name: organizationName,
    logo: {
      "@type": "ImageObject",
      url: organizationImageURL.toString(),
    },
  },
};
---

<script
  is:inline
  type="application/ld+json"
  set:html={JSON.stringify(jsonLd)}
/>
