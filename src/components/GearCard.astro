---
import Card from "../components/ui/Card.tsx";

// GearCard.astro
interface Props {
  title: string;
  description: string;
  imageUrl: string;
  viewLink: string;
}

const { title, description, imageUrl, viewLink } = Astro.props;
---

<Card>
  <a href={viewLink} target="_blank">
    <div class="p-4">
      <div class="space-y-4">
        <!-- Image Container -->
        <div
          class="bg-white rounded-xl p-4 aspect-square flex justify-center items-center"
        >
          <img
            src={imageUrl}
            alt={title}
            class="w-full h-full object-contain aspect-square"
          />
        </div>

        <!-- Text Content -->
        <div class="space-y-2">
          <h2
            class="text-slate-700 text-lg sm:text-xl md:text-2xl font-medium leading-tight"
          >
            {title}
          </h2>
          <p
            class="text-slate-600 text-xs sm:text-sm md:text-base leading-relaxed line-clamp-5"
          >
            {description}
          </p>
        </div>

        <!-- View Button -->
        <div
          class="inline-flex items-center justify-center w-full px-4 py-2.5 sm:py-3 text-sm sm:text-base text-white bg-accent rounded-lg hover:bg-teal-500 transition-colors duration-300 gap-2"
        >
          View
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="w-3 h-3 sm:w-4 sm:h-4"
            viewBox="0 0 20 20"
            fill="currentColor"
          >
            <path
              fill-rule="evenodd"
              d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z"
              clip-rule="evenodd"></path>
          </svg>
        </div>
      </div>
    </div>
  </a>
</Card>
