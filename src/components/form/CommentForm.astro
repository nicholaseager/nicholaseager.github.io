---
import TextInput from "./TextInput.astro";
import Form from "./Form.astro";
---

<Form name="comment" submitButtonText="Send Comment">
  <TextInput
    label="Email Address *"
    type="email"
    name="email"
    placeholder="Your email address..."
  />
  <TextInput
    label="Name *"
    type="text"
    name="name"
    placeholder="Your name..."
  />
  <TextInput
    label="Comment *"
    name="message"
    placeholder="Your comment..."
    multiline={true}
  />
</Form>
